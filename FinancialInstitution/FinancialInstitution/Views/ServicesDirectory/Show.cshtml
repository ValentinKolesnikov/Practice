
@{
    Layout = "~/Views/MainLayout.cshtml";
}

@model IEnumerable<FinancialInstitution.Models.ServicesDirectory>

    <div class="main-content">

        <table class="main-table">
            <caption>
                <h3 class="table__title">Справочник услуг</h3>
                <a class="btn__add" href="/ServicesDirectory/Add/"><i class="fas fa-plus"></i> Добавить</a>
            </caption>
            <tr class="main-table__row main-table__row-title">
                <td class="main-table__cell"><p class="main-table__text">Наименование</p></td>
                <td class="main-table__cell"></td>
      

            </tr>
            @foreach (FinancialInstitution.Models.ServicesDirectory sd in Model)
            {

                <tr class="main-table__row">
                    <td class="main-table__cell"><p class="main-table__text">@sd.Name</p></td>
              

                    <td class="main-table__cell">
                        <a class="main-table__link btn__edit btn" href="/ServicesDirectory/Edit/@sd.Id"><i class="fas fa-edit"></i></a>
                        <a class="main-table__link btn__delete btn" href="/ServicesDirectory/Delete/@sd.Id"><i class="fas fa-trash-alt"></i></a>
                    </td>

                </tr>
            }
        </table>
    </div>



