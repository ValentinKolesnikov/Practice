
@{
    Layout = "~/Views/MainLayout.cshtml"; ;
}
@model FinancialInstitution.Models.Branch

    <div class="action-form">
        <h3 class="action-form__title">Форма добавления филиала</h3>

        @using (Html.BeginForm("Add", "Branch", FormMethod.Post))
        {
            @Html.TextBox("Name", "", new { @class = "action-form__input", @placeholder = Html.DisplayNameFor(m => m.Name) })
            @Html.ValidationMessageFor(model => model.Name)

            @Html.DropDownList("Country", new List<SelectListItem>(), "Страна", new { @class = "action-form__select", @onchange = "countrySelected()", @id = "country" })
            @Html.ValidationMessageFor(model => model.Country)

            @Html.DropDownList("City", new List<SelectListItem>(), "Город", new { @class = "action-form__select", @id = "city" })
            @Html.ValidationMessageFor(model => model.City)

            @Html.TextBox("Street", "", new { @class = "action-form__input", @placeholder = Html.DisplayNameFor(m => m.Street) })
            @Html.ValidationMessageFor(model => model.Street)



            <div class="action-form__buttons">
                <a class="action-form__btn btn-cansel" href="/branch/showall">Отмена</a>
                <input class="action-form__btn btn-save" type="submit" name="name" value="Сохранить" />
            </div>
        }
    </div>
<script src="~/scripts/cascadeList.js"></script>
